generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int      @id @default(autoincrement())
  firstName              String
  lastName               String
  birthDate              DateTime
  country                String
  postalCode             String
  street                 String
  number                 String
  phone                  String
  email                  String   @unique
  password               String
  role                   String   @default("member")
  borrows                Borrow[]
  createdAt              DateTime @default(now())
  lastModified           DateTime @updatedAt @default(now())
}

model Game {
  id           Int @id @default(autoincrement())
  name         String
  category     String
  age          String
  players      String
  quantity     Int
  imageSrc     String
  tagLine      String
  description  String
  borrows      Borrow[]
  createdAt    DateTime @default(now())
  lastModified DateTime @updatedAt @default(now())
}

model Borrow {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  game         Game     @relation(fields: [gameId], references: [id])
  gameId       Int
  createdAt    DateTime @default(now())
  deadline     DateTime
  returned     Boolean  @default(false)
  lastModified DateTime @updatedAt @default(now())
}
